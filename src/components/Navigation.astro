    </div>
  </div>
  
  <!-- Mobile menu, hidden by default -->
  <div id="mobile-menu" class="hidden md:hidden bg-gray-800">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a href="/frameworks" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base">
        Frameworks
      </a>
      <a href="/libraries" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base">
        Libraries
      </a>
      <a href="/about" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base">
        About
      </a>
      <a href="/search" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base">
        Search
      </a>
    </div>
  </div>
</nav>

<script>
  // Function to handle mobile menu
  function initMobileMenu() {
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    
    // Mobile menu toggle
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  }

  // Initialize mobile menu on page load
  document.addEventListener('DOMContentLoaded', initMobileMenu);
  
  // Re-initialize mobile menu after page transitions
  document.addEventListener('astro:page-load', initMobileMenu);
  
  // Also initialize immediately when script runs to handle view transitions
  initMobileMenu();
</script>
