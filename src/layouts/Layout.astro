---
import { ViewTransitions } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import LoadingBar from '../components/LoadingBar.jsx';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Find the perfect UI component library for your next JavaScript project">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/nprogress.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | UIriver</title>
    <ViewTransitions fallback="swap" />
  </head>
  <body class="bg-white min-h-screen flex flex-col text-base">
    <LoadingBar client:load />
    <Navigation />
    <div id="content" class="flex-grow transition-all duration-300 max-w-full overflow-hidden">
      <slot />
    </div>
    <Footer />
    <script>
      // Add support for streaming by ensuring hydration happens properly
      document.addEventListener('astro:page-load', () => {
        // Re-initialize any client-side components or scripts if needed
      });
    </script>
  </body>
</html>
