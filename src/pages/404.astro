---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - UI Library Directory">
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-3xl font-bold text-gray-900">404</h1>
      <p class="mt-2 text-lg text-gray-600">Page not found</p>
      <p class="mt-1 text-sm text-gray-500">The page you're looking for doesn't exist or has been moved.</p>
      
      <div class="mt-6">
        <a 
          href="/" 
          class="inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700"
        >
          Back to home
        </a>
      </div>
    </div>
  </main>
</Layout>
